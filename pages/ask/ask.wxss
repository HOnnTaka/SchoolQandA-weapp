page {
  box-sizing: border-box;
}
.form {
  margin-top: 20px;
  padding: 15px;
  background: #ffffff80;
  width: 100%;
  height: 100vh;
  border-radius: 50px 50px 0 0;
}
.top-tips {
  color: #999;
  width: 100%;
  display: flex;
  justify-content: center;
}
.form-item {
  background: #ffffffbb;
  padding: 15px;
  border-radius: 20px;
  margin-top: 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 0 10px #0000000c;
}
.form-label {
  width: 30%;
}
.avatar-wrapper {
  padding: 0;
  margin: 0 !important;
  width: 56px !important;
  border-radius: 8px;
  position: relative;
  right: 60%;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.container {
  display: flex;
}
picker {
  width: 100%;
  height: 100%;
}
.submit-btn {
  background-image: linear-gradient(90deg, #17abe3bb, #ff7cdebb);
  width: 100% !important;
  color: #fff;
  border-radius: 20px;
  padding: 15px;
  margin-top: 15px;
  box-shadow: 0 0 20px #17ade352;
}
