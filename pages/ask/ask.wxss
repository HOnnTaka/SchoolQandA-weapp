page {
  box-sizing: border-box;
}
.form {
  margin-top: 20px;
  padding: 15px;
  background: #ffffff80;
  width: 100%;
  height: 100vh;
  border-radius: 30px 30px 0 0;
}
.top-tips {
  color: #999;
  width: 100%;
  display: flex;
  font-size: 14px;
  justify-content: center;
  user-select: all;
}
.form-item {
  background: #ffffffbb;
  border-radius: 20px;
  margin-top: 15px;
  display: flex;
  position: relative;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 0 10px #0000000c;
}
.form-item2 {
  margin: 15px;
}
input,picker {
  height: 100rpx !important;
}
.disabled {
  background: #f5f5f5 !important;
  cursor: not-allowed;
}
.meima-item {
  height: 130px;
}
.form-label {
  width: 30vw;
  display: block;
}
label {
  display: block;
  margin-left: 15px;
}
checkbox-group {
  display: flex;
  align-items: center;
}
checkbox-group label {
  transform: translate(-5px, 6rpx);
}
.avatar-wrapper {
  margin: 0 !important;
  width: 100px !important;
  height: 100px !important;
  border-radius: 8px;
  position: absolute;
  left: 28%;
}

.avatar {
  display: block;
  width: 100px;
  height: 100px;
  position: absolute;
  top: 0;
  left: 0;
}

.container {
  display: flex;
}
picker {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}
.submit-btn {
  background-image: linear-gradient(90deg, #17abe3bb, #ff7cdebb);
  width: 100% !important;
  color: #fff;
  border-radius: 20px;
  padding: 15px;
  margin-top: 15px;
  box-shadow: 0 0 20px #17ade352;
}
