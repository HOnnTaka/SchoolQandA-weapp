page {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.container {
  margin-top: 20px;
  background: #ffffff80;
  width: 100%;
  height: 100vh;
  border-radius: 30px 30px 0 0;
  box-sizing: border-box;
  padding-bottom: 30px;
}
.question-item {
  width: calc(100% - 30px);
  overflow: hidden;
  transition: all 0.3s ease;
  margin: 15px;
  background: #ffffffbb;
  border-bottom: 1px solid #eee;
  display: flex;
  flex-direction: column;
  border-radius: 20px;
  box-shadow: 0 0 10px #0000000c;
}
.weui-slideview__left {
  width: calc(100vw - 60px) !important;
}
.weui-slideview__right {
  margin-left: 30px;
}
.item-ext {
  padding: 15px;
}
.avatar {
  width: 58rpx;
  height: 58rpx;
  border-radius: 50%;
  margin-right: 15px;
  align-self: flex-start;
}
.question {
  display: flex;
  align-items: center;
  font-weight: bold;
  margin-bottom: 15rpx;
}
.answer {
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
}
.question text,
.answer text {
  width: calc(100% - 30px);
  user-select: all;
  line-break: anywhere;

  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  line-clamp: 3;
  box-orient: vertical;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.question-item-footer {
  font-size: 14px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #999;
  padding: 0 5rpx;
}
.question-item-footer text {
  margin-bottom: -5rpx;
}
.question-item-footer image {
  position: absolute;
  height: 40rpx;
  width: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  right: calc(100% + 5px);
}
.view-count,
.answer-count,
.more-answers {
  margin-left: calc(40rpx + 5px);
  position: relative;
  display: flex;
  align-items: center;
  cursor: pointer;
}
.view-count {
  width: 40rpx;
}
.answer-count {
  margin-left: 60rpx;
  width: 40rpx;
}
.bottom-tips {
  margin-top: 20px;
  margin-bottom: 10vh;
  color: #999;
  width: 100%;
  display: flex;
  justify-content: center;
}
.more-answers {
  margin-left: auto;
  color: transparent;
  background-image: linear-gradient(90deg, #17abe3bb, #ff7cdebb);
  background-clip: text;
  -webkit-background-clip: text;
  transition: all 0.3s ease;
}
